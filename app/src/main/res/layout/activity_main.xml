<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_layout"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    tools:context=".MainActivity" tools:ignore="MergeRootFrame" >

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.cs646.ted.assignment2.DessertFragment"
        tools:layout="@android:layout/simple_list_item_1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_editText"
        android:clickable="true"
        android:hint="@string/edit_text_hint"
        android:inputType="text"
        android:editable="false"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/main_button"
        android:layout_alignRight="@+id/main_button"
        android:layout_alignEnd="@+id/main_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_button_text"
        android:id="@+id/main_button"
        android:padding="10dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_spinner"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:prompt="@string/spinner_prompt_text"
        android:spinnerMode="dropdown"
        android:focusableInTouchMode="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
